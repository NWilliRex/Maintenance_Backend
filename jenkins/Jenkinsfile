pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Clonage du projet Maven depuis GitHub...'
                git branch: 'test/alex',
                    url: 'https://github.com/NWilliRex/Maintenance_Backend.git'
            }
        }

        stage('Build & Package') {
            steps {
                echo 'âš™ï¸ Compilation et packaging du projet Maven...'
                dir('Maintenance_Backend') {
                    sh 'mvn clean package -DskipTests=false'
                }
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
            }
        }

        stage('Test Reports') {
            steps {
                junit 'Maintenance_Backend/target/surefire-reports/*.xml'
                jacoco execPattern: 'Maintenance_Backend/target/*.exec'
            }
        }

        stage('Docker Build') {
            steps {
                echo 'ğŸ³ Construction de lâ€™image Docker...'
                dir('Maintenance_Backend') {
                    sh """
                    docker build -t 2391650/maintenance_backend:${BUILD_NUMBER} .
                    docker tag 2391650/maintenance_backend:${BUILD_NUMBER} 2391650/maintenance_backend:latest
                    """
                }
            }
        }

        stage('Docker Test Run') {
            steps {
                echo 'ğŸš€ Test du container Docker...'
                sh """
                docker run --rm -d --name maintenance_backend-test 2391650/maintenance_backend:${BUILD_NUMBER}
                sleep 5
                docker ps | grep maintenance_backend-test
                docker stop maintenance_backend-test
                """
            }
        }
    }

    post {
        success {
            echo 'âœ… Build rÃ©ussie !'
            script {
                sh '''
                curl -H "Content-Type: application/json" \
                     -X POST \
                     -d '{"content": "âœ… Build rÃ©ussi sur Jenkins pour Maintenance_Backend ! ğŸ‰"}' \
