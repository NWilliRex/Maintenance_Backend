                '''
            }
        }
        failure {
            echo 'âŒ Ã‰chec de la build.'
            script {
                sh '''
                curl -H "Content-Type: application/json" \
                     -X POST \
                     -d '{"content": "âŒ Build Ã©chouÃ© sur Jenkins pour Maintenance_Backend ğŸ’¥"}' \
