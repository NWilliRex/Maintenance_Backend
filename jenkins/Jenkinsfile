pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'üì• Clonage du projet Maven depuis GitHub...'
                git branch: 'test/alex',
                    url: 'https://github.com/NWilliRex/Maintenance_Backend.git'
            }
        }

        stage('Build & Package (Maven)') {
            steps {
                echo '‚öôÔ∏è Compilation et packaging du projet Maven...'
                dir('Maintenance_Backend') {
                    sh 'mvn clean package -DskipTests=false'
                }
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
            }
        }

        stage('Test Reports') {
            steps {
                junit 'Maintenance_Backend/target/surefire-reports/*.xml'
                jacoco execPattern: 'Maintenance_Backend/target/*.exec'
            }
        }

        stage('Docker Build') {
            steps {
                echo 'üê≥ Construction de l‚Äôimage Docker...'
                dir('Maintenance_Backend') {
                    sh """
                    docker build -t monapp:${BUILD_NUMBER} .
                    docker tag monapp:${BUILD_NUMBER} monapp:latest
                    """
                }
            }
        }

        stage('Docker Test Run') {
            steps {
                echo 'üöÄ Test du container Docker...'
                sh """
                docker run --rm -d --name monapp-test monapp:${BUILD_NUMBER}
                sleep 5
                docker ps | grep monapp-test
                docker stop monapp-test
                """
            }
        }
    }

    post {
        success {
            echo '‚úÖ Build r√©ussie !'
            script {
                sh '''
                curl -H "Content-Type: application/json" \
                     -X POST \
                     -d '{"content": "‚úÖ Build r√©ussi sur Jenkins pour Maintenance_Backend ! üéâ"}' \
                     "https://discord.com/api/webhooks/1428945933177196716/DVFdGRP79ixTtzyrR1bdj8D_vkvMFn2TPj5Q7z8AD5MwOSFo26YPOccoYTb9loGyh_M2"
                '''
            }
        }
        failure {
            echo '‚ùå √âchec de la build.'
            script {
                sh '''
                curl -H "Content-Type: application/json" \
                     -X POST \
                     -d '{"content": "‚ùå Build √©chou√© sur Jenkins pour Maintenance_Backend üí•"}' \
                     "https://discord.com/api/webhooks/1428945933177196716/DVFdGRP79ixTtzyrR1bdj8D_vkvMFn2TPj5Q7z8AD5MwOSFo26YPOccoYTb9loGyh_M2"
                '''
            }
        }
    }
}
